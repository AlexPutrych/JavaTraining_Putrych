package by.epam.grodno.java.ap.Task2;

public class MassiveIntegers {
	public static void main(String[] args){
		int a[], b[], j = 0, i, k = 20;  // i - indexes, k - massive length
		a = new int[k];
		b = new int[k-1];
		for (i=0; i < k; i++){
			a[i] = i*2;
			System.out.print(a[i] + " ");	 
	}
		while (j <= b.length){
			  b[j] = a[i]*a[i+1];
		    System.out.print(b[j] + " ");  
		

	 
	}
}}
