package by.epam.grodno.java.ap.Task2;

public class MassiveIntegers {
	public static void main(String[] args){
		int a[], b[], i, j = 0, k = 20;  // i - indexes, k - massive length
		a = new int[k]; 
		b = new int[j];
		for (i=0; i < k; i++){
			a[i] = i*2;
			while (i < k) j++;
				
			System.out.print(a[i] + " ");
			System.out.print(b[j] = a[i+2]*a[i+1]);
		}
	}

	 

}
